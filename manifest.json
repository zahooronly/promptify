{
  "manifest_version": 3,
  "name": "Promptify",
  "version": "0.1.0",
  "description": "A chrome extension for enhancing prompt writing made with Vite and TypeScript.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "content_scripts": [
    {
      "js": ["src/content/index.ts"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://deepseek.com/*",
        "https://chat.deepseek.com/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://chat.forefront.ai/*",
        "https://www.forefront.ai/*",
        "https://bolt.new/*",
        "https://readdy.ai/*",
        "https://www.magicpatterns.com/*",
        "https://v0.dev/"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
